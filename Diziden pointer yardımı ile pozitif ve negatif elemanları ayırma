// Diziye girilen elli adet sayıdan pozitif olanları B dizisine aktaran ve negatif olanları C dizisine aktaran programı POİNTER yardımı ile yazınız.
#include <stdio.h>
int main()
{
    int diziA[50], diziB[50], diziC[50];
    int *ptrA = diziA;
    int *ptrB = diziB;
    int *ptrC = diziC;
    int bSayac = 0, cSayac = 0;
    printf("A dizisinin elemanlarini giriniz:\n");
    for (int i = 0; i < 50; i++)
    {
        scanf("%d", ptrA + i);
        if (*(ptrA + i) >= 0)
        {
            *(ptrB + bSayac) = *(ptrA + i);
            bSayac++;
        }
        else
        {
            *(ptrC + cSayac) = *(ptrA + i);
            cSayac++;
        }
    }
    printf("B dizisi elemanlari:\n");
    for (int i = 0; i < bSayac; i++)
    {
        printf("%d  ", *(ptrB + i));
    }
    printf("\nC dizisi elemanlari:\n");
    for (int k = 0; k < cSayac; k++)
    {
        printf("%d ", *(ptrC + k));
    }

    return 0;
}
