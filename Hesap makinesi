// HESAP MAKİNESİ PROJE 1
#include <stdio.h>
int main()
{
    int islem;
    float sayi;
    float sayi1;
    printf("yapmak istediginiz islemi giriniz:\n\n");
    printf("1)Toplama\n2)Cikarma\n3)Carpma\n4)Bolme");
    scanf("%d", &islem);
    printf("islem yapmak istediginiz iki sayiyi giriniz:");
    scanf("%f %f", &sayi, &sayi1);
    switch (islem)
    {
    case 1:
        printf("Toplama islemini sectiniz. Sonuc=%.2f\n", sayi1 + sayi);
        break;
    case 2:
        printf("Cikarma islemini sectiniz. Sonuc=%.2f\n", sayi1 - sayi);
        break;
    case 3:
        printf("Carpma islemini sectiniz.Sonuc=%.2f\n", sayi1 * sayi);
        break;
    case 4:
        printf("Bolme islemini sectiniz.Sonuc=%.2f\n", sayi1 / sayi);
        break;
    default:
        printf("Dogru islem sectiginize emin olunuz.");
        break;
    }
}
